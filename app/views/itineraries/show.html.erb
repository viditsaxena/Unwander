<% content_for :body_class, "itinerary-page" %>
<p id="notice"><%= notice %></p>
<div class="itinerary-detail">
  <div class="overview">
    <img src="<%= @itinerary.image_url %>" />

  </div>
  <div class="container">
    <h1 ><%= @itinerary.description %></h1><span><%= link_to 'Edit', edit_itinerary_path(@itinerary) %></span>
    <hr>
    <iframe id="iframe1" src="<%= @itinerary.map %>" width="1080" height="640" frameborder="0"></iframe>
    <% if @current_reservation %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Your upcoming reservation details.</h3>
        </div>
        <div class="panel-body">
          <li><b>Status:</b> <%= @current_reservation.status %></li>
          <li><b>Host Name:</b> <%= @current_reservation.host.name %></li>

          <% if @current_reservation.phone_number %>
            <li><b>Contact Phone Number:</b> <a href="#"><%= @current_reservation.phone_number %></a></li>
          <% end %>
        </div>
      </div>
      <li><%= @current_reservation.message %></li>
    <% else %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Make a Reservation</h3>
        </div>
        <div class="panel-body">
          <%= render 'reservation_form' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
