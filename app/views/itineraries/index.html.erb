<% content_for :hero do %>
  <div class="hero-text">
    <h2>See Sample Itineraries Made By <strong><u>Locals</u></strong></h2>
  </div>
<% end %>
<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <% @itineraries.each do |itinerary| %>
      <div class="col-md-4">
        <a href="/itineraries/<%= itinerary.id %>" class="itinerary">

          <img src="<%= itinerary.image_url %>" />
          <h2><strong><%= itinerary.description %></strong></h2>
        </a>
      </div>
    <% end %>
  </div>
</div>
